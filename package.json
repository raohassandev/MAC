{
  "name": "macsys-root",
  "version": "1.0.0",
  "description": "Modbus Device Management System - Root Package",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "dev": "nodemon src/index.ts",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' tsc && cd client && NODE_OPTIONS='--max-old-space-size=6000' npm run build",
    "client": "cd client && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "install-all": "npm install && cd client && npm install",
    "server": "node dist/index.js",
    "server:dev": "nodemon src/index.ts",
    "lint": "cd client && npm run lint",
    "setup": "bash setup.sh",
    "push": "git add . && git commit -m 'command push' && git push"
  },
  "keywords": [
    "modbus",
    "device",
    "management",
    "iot"
  ],
  "author": "Israr ul Haq",
  "license": "MIT",
  "dependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.15.3",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "modbus-serial": "^8.0.11",
    "mongoose": "^8.14.1",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "nodemon": "^3.1.10",
    "typescript": "^5.8.3"
  }
}
